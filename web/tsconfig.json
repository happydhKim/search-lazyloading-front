{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "strict": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2020",
      "dom"
    ],
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.tsx", "src/index.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}