{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./public/images/*"],
    },
    "strict": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2020",
      "dom"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "config"]
}